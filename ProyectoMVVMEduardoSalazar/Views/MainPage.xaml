<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMVVMEduardoSalazar.Views.MainPage"
             Title="Eduardo Salazar - Pagina Principal">
   

        <ScrollView>
            <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
                <Image
                Source="iconholamundo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                HorizontalOptions="Center" 
                VerticalOptions="Center"/>

                <Label
                Text="Bienvenido a mi proyecto MVVM"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

                <Label
                Text="Mi nombre es Eduardo Salazar"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

                <Label
                Text="Esta es mi primera vez trabajando con MVVM"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            </VerticalStackLayout>
        </ScrollView>

    </ContentPage>
